@using FindoctorEntity.Entities

@{
    ViewData["Title"] = "Index";
}

@model ICollection<Patient>

<div class="content-wrapper container">
    <div class="container-fluid">
        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-controller="Home" asp-action="Index">İdarə paneli</a>
            </li>
        </ol>
        <div class="box_general padding_bottom">
            <div class="header_box version_2">
                <h2><i class="fa fa-file"></i>Xəstələr</h2>
            </div>

            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Ad</th>
                        <th>Soyad</th>
                        <th>Email</th>
                        <th>Cins</th>
                        <th style="Width:200px">Şəkil</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                   @foreach (var patients in Model)
                    {
                        <tr>
                            <th scope="row">1</th>
                            <td>@patients.Name</td>
                            <td>@patients.Surname</td>
                            <td>@patients.Email</td>
                            <td>@patients.Gender</td>
                            <td><img style="width:100%" src="~/assets/img/patient/@patients.İmageUrl" /></td>
                            <td>
                                <a asp-controller="Patient" asp-action="Delete" asp-route-id="@patients.Id" class="btn btn-danger">Sil</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>