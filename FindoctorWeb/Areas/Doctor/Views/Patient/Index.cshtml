@using FindoctorEntity.Entities

@{
    ViewData["Title"] = "Index";
}

@model ICollection<DoctorPatient>

<div class="content-wrapper container">
    <div class="container-fluid">
        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-controller="Home" asp-action="Index">İdarə paneli</a>
            </li>
        </ol>
        <div class="box_general padding_bottom">
            <div class="header_box version_2">
                <h2><i class="fa fa-file"></i>Xəstələr</h2>
            </div>

            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Ad</th>
                        <th>Soyad</th>
                        <th>Email</th>
                        <th>Telefon</th>
                        <th>Cins</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var dp in Model)
                    {
                        <tr>
                            <th scope="row">1</th>
                            <td>@dp.Patient.Name</td>
                            <td>@dp.Patient.Surname</td>
                            <td>@dp.Patient.Email</td>
                            <td>@dp.Patient.Phone</td>
                            <td>@dp.Patient.Gender</td>
                            <td>
                                <a asp-controller="Patient" asp-action="Comfirm" asp-route-Id="@dp.Patient.Id" class="btn btn-success">Qəbul et</a>
                                <a asp-controller="Patient" asp-action="Delete" asp-route-id="@dp.Patient.Id" class="btn btn-danger">Sil</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>