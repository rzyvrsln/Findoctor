@using FindoctorEntity.Entities
@{
    ViewData["Title"] = "ViewProfile";
}

@model Doctor

<div class="content-wrapper">
    <div class="container-fluid">

        <div class="container">
            <div class="main-body">

                <!-- Breadcrumb -->
                <nav aria-label="breadcrumb" class="main-breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">İdarə paneli</a></li>
                        <li class="breadcrumb-item"><a href="#">Həkim</a></li>
                    </ol>
                </nav>
                <!-- /Breadcrumb -->

                <div class="row gutters-sm">
                    <div class="col-md-4 mb-3">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex flex-column align-items-center text-center">
                                    <img src="~/assets/img/doctor/@Model.ImageUrl" alt="Admin" class="rounded-circle" width="150">
                                    <div class="mt-3">
                                        <h4>@Model.Name</h4>
                                        <p class="text-secondary mb-1">@Model.Email</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-8">

                        <div class="card mb-3">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Həkim</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        @Model.Surname @Model.Name
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Email</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        @Model.Email
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Telefon nömrəsi</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        (+994) @Model.Phone
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Cins</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        @Model.Gender
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Klinika</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        @ViewBag.Clinic
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Kateqoriya</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        @ViewBag.Category
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">İş saatı</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        @Model.StartWorkTime.Hour:@Model.StartWorkTime.Minute - @Model.StopWorkTime.Hour: @Model.StopWorkTime.Minute
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <a asp-controller="Profile" asp-action="Update" asp-route-Id="" class="btn btn-info ">Düzəliş et</a>
                                    </div>
                                </div>
                            </div>
                        </div>


                    </div>
                </div>

            </div>
        </div>
    </div>
</div>