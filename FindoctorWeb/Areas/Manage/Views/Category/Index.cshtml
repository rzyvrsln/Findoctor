@using FindoctorEntity.Entities
@{
    ViewData["Title"] = "Index";
}

@model ICollection<Category>

<div class="content-wrapper container">
    <div class="container-fluid">
        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-controller="Home" asp-action="Index">İdarə paneli</a>
            </li>
            <li class="breadcrumb-item active"><a asp-controller="Category" asp-action="Create" >Kategoriya yarat</a></li>
        </ol>
        <div class="box_general padding_bottom">
            <div class="header_box version_2">
                <h2><i class="fa fa-file"></i>Kateqoriyalar</h2>
            </div>

            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Kateqoriya</th>
                        <th style="Width:200px">Şəkil</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var categories in Model)
                    {
                        <tr>
                            <th scope="row">1</th>
                            <td>@categories.Name</td>
                            <td><img style="width:100%" src="~/assets/img/category/@categories.ImageUrl" /></td>
                            <td>
                                <a asp-controller="Category" asp-action="Delete" asp-route-id="@categories.Id" class="btn btn-danger">Sil</a>
                                <a asp-controller="Category" asp-action="Update" asp-route-id="@categories.Id" class="btn btn-warning">Redaktə et</a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>

            </div>
        </div>
    </div>