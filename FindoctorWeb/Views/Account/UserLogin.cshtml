@using FindoctorViewModel.Entities.Account

@{
    ViewData["Title"] = "UserLogin";
}

@model CreateUserLoginVM

<main>
    <div class="bg_color_2">
        <div class="container margin_60_35">
            <div id="register">
                <h1>Zəhmət olmasa Findoctor-da istifadəçi olaraq qeydiyyatdan keçin!</h1>
                <div class="row justify-content-center">
                    <div class="col-md-7">
                        <form method="post">
                            <div class="box_form">
                                <div class="form-group">
                                    <label asp-for="UserName">Email</label>
                                    <input asp-for="UserName" class="form-control" placeholder="Istifadəçi adı">
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Password">Şifrə</label>
                                    <input asp-for="Password" class="form-control" id="password1" name="password1" placeholder="Şifrəniz">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div id="pass-info" class="clearfix"></div>
                                <div class="checkbox-holder text-left">
                                    <div class="checkbox_2">
                                        <input asp-for="IsParsistance" value="accept_2" id="check_2" name="check_2" checked>
                                        <label for="check_2"><span><strong>Məni xatırla</strong></span></label>
                                    </div>
                                </div>
                                <div class="form-group text-center add_top_30">
                                    <a><input type="submit" readonly class="btn_1 text-center" value="Daxil olun"></a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- /row -->
            </div>
            <!-- /register -->
        </div>
    </div>
</main>