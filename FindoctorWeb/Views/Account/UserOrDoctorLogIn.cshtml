
@{
    ViewData["Title"] = "UserOrDoctorLogIn";
}

<main>
	<div class="bg_color_2">
		<div class="container margin_60_35">
			<div id="register">
				<h1>Zəhmət olmasa Findoctor-da giriş edin!</h1>
				<div class="row justify-content-center">
					<div class="col-md-7">
						<form>
							<div class="box_form">
								<h5 class="text-center">İstifadəçi kimi yoxsa həkim kimi giriş etmək istəyirsiniz ?</h5>
								<div class="form-group text-center add_top_30">
								<a asp-controller="Account" asp-action="UserLogin"><input readonly class="btn_1 text-center" value="İstifadəçi"></a>
								</div>
								<div class="form-group text-center add_top_30">
								<a asp-controller="Account" asp-action="DoctorLogin"><input readonly class="btn_1 text-center" value="Həkim"></a>
								</div>
								</div>

						</form>


					</div>
				</div>
				<!-- /row -->
			</div>
			<!-- /register -->
		</div>
	</div>
</main>