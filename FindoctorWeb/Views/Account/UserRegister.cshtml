
@{
    ViewData["Title"] = "UserRegister";
}

<main>
		<div class="bg_color_2">
			<div class="container margin_60_35">
				<div id="register">
				<h1>Zəhmət olmasa Findoctor-da istifadəçi olaraq qeydiyyatdan keçin!</h1>
					<div class="row justify-content-center">
						<div class="col-md-7">
							<form method="post">
								<div class="box_form">
									<div class="form-group">
										<label>Ad</label>
										<input type="text" class="form-control" placeholder="Adınız">
									</div>
									<div class="form-group">
										<label>Soyad</label>
										<input type="text" class="form-control" placeholder="Soyadınız">
									</div>
									<div class="form-group">
										<label>Email</label>
										<input type="email" class="form-control" placeholder="Email adresiniz">
									</div>
									<div class="form-group">
										<label>Şifrə</label>
									<input type="password" class="form-control" id="password1" name="password1" placeholder="Şifrəniz">
									</div>
									<div class="form-group">
										<label>Şifrə</label>
										<input type="password" class="form-control" id="password2" name="password2" placeholder="Şifrəni təsdiqləyin">
									</div>
									<div id="pass-info" class="clearfix"></div>
									<div class="checkbox-holder text-left">
										<div class="checkbox_2">
											<input type="checkbox" value="accept_2" id="check_2" name="check_2" checked>
											<label for="check_2"><span><strong>Qaydalar və Şərtlərlə</strong> razıyam</span></label>
										</div>
									</div>
									<div class="form-group text-center add_top_30">
										<a asp-controller="Acoount" asp-action="UserRegister"><input readonly class="btn_1 text-center" value="Qeydiyyatdan keçin"></a>
									</div>
								</div>
								<p class="text-center"><small>Siz qeydiyyatdan keçərək həkimlərlə əlaqə yarada bilərsiniz.</small></p>
							</form>
						</div>
					</div>
					<!-- /row -->
				</div>
				<!-- /register -->
			</div>
		</div>
	</main>