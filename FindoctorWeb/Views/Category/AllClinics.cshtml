@using FindoctorEntity.Entities

@{
    ViewData["Title"] = "AllClinics";
}

@model ICollection<Clinic>

<main class="theia-exception">
    <form asp-controller="SearchBar" asp-action="SearchClinic">
        <div id="results">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                    </div>
                    <div class="col-md-6">
                        <div class="search_bar_list">
                            <input name="SearchClinic" type="text" class="form-control" placeholder="Klinika...">
                            <input type="submit" value="Axtar">
                        </div>
                    </div>
                </div>
                <!-- /row -->
            </div>
            <!-- /container -->
        </div>
    </form>
    <!-- /results -->
    @await Component.InvokeAsync("DoctorsOrClinics")
    <!-- /filters -->

    <div class="container margin_60_35">
        <div class="row">
            <div class="col-lg-12" style="display:flex;flex-wrap:wrap;justify-content:center">
                @foreach (var clinics in Model)
                {
                    <div class="strip_list col-lg-5" style="margin:6px;">
                        <figure>
                            <a asp-controller="Category" asp-action="ClinicDetail" asp-route-Id="@clinics.Id"><img src="~/assets/img/clinic/clinic.png" alt=""></a>
                        </figure>
                        <h3>@clinics.Name</h3>

                        @if (clinics.Description.Length > 40)
                        {
                            <p>@clinics.Description.Substring(0,40)...</p>
                        }
                        else
                        {
                            <p>@clinics.Description</p>
                        }
                        <ul>
                            <li><a>Ünvan: @clinics.Location</a></li>
                            <li><a asp-controller="Category" asp-action="ClinicDetail" asp-route-Id="@clinics.Id">Nəzər salın</a></li>
                        </ul>
                    </div>
                }
                
            </div>

        </div>
        <nav aria-label="" class="add_top_20">
            <ul class="pagination pagination-sm">
                <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1">Previous</a>
                </li>
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#">Next</a>
                </li>
            </ul>
        </nav>
        <!-- /pagination -->
    </div>
    <!-- /container -->
</main>