@using FindoctorEntity.Entities
@{
    ViewData["Title"] = "Index";
}

@model ICollection<Doctor>

<main class="theia-exception">
    <div id="results">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                </div>
                <div class="col-md-6">
                    <div class="search_bar_list">
                        <form asp-controller="SearchBar" asp-action="Search">
                            <input name="Search" type="text" class="form-control" placeholder="Həkim ...">
                            <input type="submit" value="Axtar">
                        </form>
                    </div>
                </div>
            </div>
            <!-- /row -->
        </div>
        <!-- /container -->
    </div>
    <!-- /results -->
    @await Component.InvokeAsync("DoctorsOrClinics")
    <!-- /filters -->

    <div class="container margin_60_35">
        <div class="row">
            <div class="col-lg-12" style="display:flex;flex-wrap:wrap;justify-content:center">
                @foreach (var doctors in Model)
                {
                    <div class="strip_list col-lg-5" style="margin:6px;">
                        <a href="#0" class="wish_bt"></a>
                        <figure>
                            <a asp-controller="Category" asp-action="Detail" asp-route-Id="@doctors.Id"><img src="~/assets/img/doctor/@doctors.ImageUrl" alt=""></a>
                        </figure>
                        <small>@doctors.Category.Name</small>
                        <h3>Dr. @doctors.Name</h3>

                        @if (doctors.About.Length > 50)
                        {
                            <p>@doctors.About.Substring(0,50)...</p>
                        }
                        else
                        {
                            <p>@doctors.About</p>
                        }
                        <ul>
                            <li><a asp-controller="Category" asp-action="Detail" asp-route-Id="@doctors.Id">Müraciət edin</a></li>
                        </ul>
                    </div>
                }
                <!-- /strip_list -->

                
                <!-- /pagination -->
            </div>
            <!-- /col -->
            <!-- /aside -->
            <nav aria-label="" class="add_top_20">
                <ul class="pagination pagination-sm">
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1">Previous</a>
                    </li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#">Next</a>
                    </li>
                </ul>
            </nav>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</main>