@using FindoctorViewModel.Entities.DoctorReviewCombined
@using System.Security.Claims

@{
    ViewData["Title"] = "Review";
}

@model DoctorReviewVM

<main>
    <div id="breadcrumb">
        <div class="container">
            <ul>
                <li><a href="#">Home</a></li>
                <li><a href="#">Category</a></li>
                <li>Page active</li>
            </ul>
        </div>
    </div>
    <!-- /breadcrumb -->

    <div class="container margin_60_35">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <form method="post" asp-controller="Review" enctype="multipart/form-data">
                    @{
                        string userName = User.FindFirstValue(ClaimTypes.Name);
                    }
                    <div class="box_general_3 write_review">
                        <h1>Həkim @Model.Doctor.Surname @Model.Doctor.Name üçün rəy yazın</h1>
                        <!-- /rating_submit -->
                        <div class="form-group">
                            <label>Adınız</label>
                            <input asp-for="@Model.CreateReviewVM.Name" readonly class="form-control" type="text" value="@userName">
                            <span asp-validation-for="@Model.CreateReviewVM.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Rəyiniz</label>
                            <textarea asp-for="@Model.CreateReviewVM.Description" class="form-control" style="height: 180px;" placeholder="Rəyinizi bura yazın ..."></textarea>
                            <span asp-validation-for="@Model.CreateReviewVM.Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Şəkliniz</label>
                            <div class="fileupload"><input asp-for="@Model.CreateReviewVM.Image" accept="image/*"></div>
                            <span asp-validation-for="@Model.CreateReviewVM.Image" class="text-danger"></span>
                        </div>
                        <hr>
                        <div class="form-group">
                            <div class="checkboxes add_bottom_30 add_top_15">
                                <label class="container_check">
                                    Bütün şərtlərlə razıyam!
                                    <input asp-for="@Model.CreateReviewVM.Access">
                                    <span asp-validation-for="@Model.CreateReviewVM.Access" class="checkmark text-danger"></span>
                                </label>
                            </div>
                        </div>
                        <button asp-route-Id="@Model.Doctor.Id" class="btn_1">Rəy əlavə et</button>
                    </div>
                </form>
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</main>