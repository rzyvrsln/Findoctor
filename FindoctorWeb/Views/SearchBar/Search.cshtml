@using FindoctorEntity.Entities

@{
    ViewData["Title"] = "Search";
}

@model ICollection<Doctor>

<main class="theia-exception">
    <form asp-controller="SearchBar" asp-action="Search">
        <div id="results">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <h4>140 dan <strong>10</strong></h4>
                    </div>
                    <div class="col-md-6">
                        <div class="search_bar_list">
                            <input name="Search" type="text" class="form-control" placeholder="Ad, Həkim...">
                            <input type="submit" value="Axtar">
                        </div>
                    </div>
                </div>
                <!-- /row -->
            </div>
            <!-- /container -->
        </div>
    </form>
    <!-- /results -->
    <div class="filters_listing">
        <div class="container">
            <ul class="clearfix">
                <li>
                    <h6>Type</h6>
                    <div class="switch-field">
                        <ul>
                            <li>
                                <input type="radio" id="doctor" name="radio_search" value="doctor">
                                <label for="doctor"><a asp-controller="Category" asp-action="AllDoctors">Həkimlər</a></label>
                            </li>
                            <li>
                                <input type="radio" id="clinic" name="radio_search" value="clinic">
                                <label for="clinic"><a asp-controller="Category" asp-action="AllClinics">Klinikalar</a></label>
                            </li>
                        </ul>
                    </div>
                </li>
                @*<li>
                <h6>Sort by</h6>
                <select name="orderby" class="selectbox">
                <option value="Closest">Closest</option>
                <option value="Best rated">Best rated</option>
                <option value="Men">Men</option>
                <option value="Women">Women</option>
                </select>
                </li>*@
            </ul>
        </div>
        <!-- /container -->
    </div>
    <!-- /filters -->

    <div class="container margin_60_35">
        <div class="row">
            <div class="col-lg-12">
                @foreach (var doctors in Model)
                {
                    <div style="display:inline-block;" class="strip_list fadeIn col-lg-6">
                        <a href="#0" class="wish_bt"></a>
                        <figure>
                            <a asp-controller="Category" asp-action="Detail" asp-route-Id="@doctors.Id"><img src="~/assets/img/doctor/@doctors.ImageUrl" alt=""></a>
                        </figure>
                        <small>@doctors.Category.Name</small>
                        <h3>Dr. @doctors.Name</h3>

                        @if (doctors.About.Length > 50)
                        {
                            <p>@doctors.About.Substring(0,50)...</p>
                        }
                        else
                        {
                            <p>@doctors.About</p>
                        }
                        <ul>
                            <li><a asp-controller="Category" asp-action="Detail" asp-route-Id="@doctors.Id">Müraciət edin</a></li>
                        </ul>
                    </div>
                }
                <!-- /strip_list -->

                <nav aria-label="" class="add_top_20">
                    <ul class="pagination pagination-sm">
                        <li class="page-item disabled">
                            <a class="page-link" href="#" tabindex="-1">Previous</a>
                        </li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#">Next</a>
                        </li>
                    </ul>
                </nav>
                <!-- /pagination -->
            </div>
            <!-- /col -->
            <!-- /aside -->

        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</main>